<?xml version="1.0" encoding="utf-8"?>
<com.basecamp.turbolinks.TurbolinksView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/turbolinks_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/turbolinks_webView_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp">

        <!-- WebView get attached/detached here -->

    </FrameLayout>

    <FrameLayout
        android:id="@+id/turbolinks_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Custom progress view added/removed here -->

    </FrameLayout>

    <ImageView
        android:id="@+id/turbolinks_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/turbolinks_error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Custom error view added/removed here -->

    </FrameLayout>

</com.basecamp.turbolinks.TurbolinksView>
