<?xml version="1.0" encoding="utf-8"?>
<com.basecamp.turbolinks.TurbolinksView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/turbolinks_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.basecamp.turbolinks.TurbolinksSwipeRefreshLayout
        android:id="@+id/turbolinks_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- WebView get attached/detached here -->

    </com.basecamp.turbolinks.TurbolinksSwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/turbolinks_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Custom progress view added/removed here -->

    </FrameLayout>

    <ImageView
        android:id="@+id/turbolinks_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="ContentDescription" />

</com.basecamp.turbolinks.TurbolinksView>
