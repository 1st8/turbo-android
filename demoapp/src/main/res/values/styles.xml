<resources>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="TextViewStyle"/>

    <style name="TextViewStyle.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_solid_selector</item>
    </style>

    <style name="ButtonStyle.Close">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:tint">@color/button_close_color_selector</item>
        <item name="android:background">@null</item>
    </style>

</resources>
